<%- include("partials/header") -%>

<h1 class = "box" id = "heading">Money Transfer</h1>

<div class = "box">
  <h2>Account name: <%=adminName%></h2>
  <h2>Current balance: <%=adminBal%></h2>
</div>

<form action="/" method="post">
  <div class="form-goup">
    <label for="exampleInputEmail1">Name of recipent</label>
    <input class="form-control" type="text" name="recipentName" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Email address</label>
    <input type="email" class="form-control" id="exampleFormControlInput1" name="sendEmail">
  </div>
  <div class="form-group">
      <label>Amount</label>
      <input name="Amount" type="number" class="form-control">
  </div>

  <button class="btn btn-warning btn-lg" type="submit" name="sendMoney">Send</button>


</form>
<%- include("partials/footer") -%>
